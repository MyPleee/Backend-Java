	<display-name>Playlist To Music Backend Application</display-name>
	
    <listener>
        <listener-class>
			ple.server.lifecycle.ContextListener
		</listener-class>
    </listener>
    
	<servlet>
		<servlet-name>insert</servlet-name>
		<servlet-class>
			heesom.transport.TestInsertServlet
		</servlet-class>
	</servlet>
    <servlet-mapping>
        <servlet-name>insert</servlet-name>
        <url-pattern>/insert</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>3000</session-timeout>
    </session-config>
    
